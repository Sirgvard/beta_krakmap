<!DOCTYPE html>

<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link href="/assets/fonts/font-awesome.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="/assets/css/bootstrap-select.min.css" type="text/css">
    <link rel="stylesheet" href="/assets/css/owl.carousel.css" type="text/css">
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css">
    <link rel="stylesheet" href="/assets/css/user.style.css" type="text/css">
    <link rel="icon" type="image/ico" href="/assets/icons/favicon.ico" />

    <title><%= data.name %></title>

</head>

<body onunload="" class="page-subpage page-item-detail navigation-off-canvas" id="page-top">

<!-- Outer Wrapper-->
<div id="outer-wrapper">
    <!-- Inner Wrapper -->
    <div id="inner-wrapper">
        <% include ../partials/navigation.ejs %>
        <!-- Page Canvas-->
        <div id="page-canvas">
            <!--Off Canvas Navigation-->
            <nav class="off-canvas-navigation">
                <header>Navigation</header>
                <div class="main-navigation navigation-off-canvas"></div>
            </nav>
            <!--end Off Canvas Navigation-->
            <!--Sub Header-->
            <section class="sub-header">
                <div class="search-bar horizontal collapse" id="redefine-search-form"></div>
                <!-- /.search-bar -->
                <div class="breadcrumb-wrapper">
                    <div class="container">
                        <ol class="breadcrumb">
                            <li><a href="/"><i class="fa fa-home"></i></a></li>
                            <li><a href="#">Spot</a></li>
                            <li class="active"><%= data.name %></li>
                        </ol>
                        <!-- /.breadcrumb-->
                    </div>
                    <!-- /.container-->
                </div>
                <!-- /.breadcrumb-wrapper-->
            </section>
            <!--end Sub Header-->

            <!--Page Content-->
            <div id="page-content">

                <div id="map-detail"></div>
                <section class="container">
                    <div class="row">
                        <!--Item Detail Content-->
                        <div class="col-md-9">
                            <section class="block" id="main-content">
                                <header class="page-title">
                                    <div class="title">
                                        <h1><%= data.name %></h1>
                                        <figure><%= data.location %></figure>
                                    </div>
                                    <div class="info">
                                        <div class="type">
                                            <i><img src="/assets/icons/spots/<%= data.type %>.png" alt=""></i>
                                            <span><%= data.type %></span>
                                        </div>
                                    </div>
                                </header>
                                <div class="row">
                                    <!--Content-->
                                    <div class="col-md-12 col-sm-12">
                                        <section>
                                            <article class="item-gallery">
                                                <div class="owl-carousel item-slider">
                                                    <% var i = 0;
                                                        data.gallery.forEach(function(photo){ %>
                                                        <div class="slide" style="width:640px; height: 640px;"><img src="<%= photo %>" data-hash="<%= i %>" alt=""></div>
                                                    <% i++; }); %>
                                                </div>
                                                <!-- /.item-slider -->
                                                <div class="thumbnails">
                                                    <div class="expandable-content height collapsed show-70" id="gallery-thumbnails">
                                                        <div class="content">
                                                            <%  var i = 0;
                                                                data.gallery.forEach(function(photo){ %>
                                                                <a href="#<%= i %>" id="thumbnail-<%= i %>"><img src="<%= photo %>" alt=""></a>
                                                            <% i++; }); %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                            <!-- /.item-gallery -->
                                            <article class="block" id="description">
                                                <header><h2>Description</h2></header>
                                                <p>
                                                    <%= data.description %>
                                                </p>
                                            </article>
                                        </section>
                                        <!--Reviews-->
                                        <section class="block">
                                            <header>
                                                <h2 class="pull-left">
                                                    <%  if (data.tips.length > 0){ %>
                                                            Tips
                                                    <%  }
                                                        else{ %>
                                                            No tips yet
                                                    <%  }; %>
                                                </h2>
                                            </header>
                                            <section class="reviews">
                                                <% data.tips.forEach(function(tip){ %>
                                                    <article class="review">
                                                        <figure class="author">
                                                            <img src="<%= tip.authorPicture %>" alt="">
                                                            <div class="date"><%= tip.createdAt %></div>
                                                        </figure>
                                                        <!-- /.author-->
                                                        <div class="wrapper">
                                                            <h5><%= tip.author %></h5>
                                                            <p>
                                                                <%= tip.content %>
                                                            </p>
                                                        </div>
                                                        <!-- /.wrapper-->
                                                    </article>
                                                    <!-- /.review -->
                                                <% }); %>
                                            </section>
                                            <!-- /.reviews-->
                                        </section>
                                        <!-- /#reviews -->
                                        <!--end Reviews-->
                                    </div>
                                    <!-- /.col-md-8-->
                                </div>
                                <!-- /.row -->
                            </section>
                            <!-- /#main-content-->
                        </div>
                        <!-- /.col-md-8-->
                        <!--Sidebar-->
                        <div class="col-md-3">
                            <aside id="sidebar">
                                <section>
                                    <header><h2>Near Places</h2></header>
                                    <%  data.nearSpots.forEach(function(spot){ %>
                                        <a href="/spot/<%= spot.objectId %>" class="item-horizontal small">
                                            <h3><%= spot.name %></h3>
                                            <figure><%= spot.location %></figure>
                                            <div class="wrapper">
                                                <div class="info">
                                                    <div class="type">
                                                        <i><img src="/assets/icons/spots/<%= spot.type %>.png" alt=""></i>
                                                        <span><%= spot.type %></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                        <!--/.item-horizontal small-->
                                    <%  }); %>
                                </section>
                            </aside>
                            <!-- /#sidebar-->
                        </div>
                        <!-- /.col-md-3-->
                        <!--end Sidebar-->
                    </div><!-- /.row-->
                </section>
                <!-- /.container-->
            </div>
            <!-- end Page Content-->
        </div>
        <!-- end Page Canvas-->
        <% include ../partials/footer.ejs %>
    </div>
    <!-- end Inner Wrapper -->
</div>
<!-- end Outer Wrapper-->

<script type="text/javascript" src="/assets/js/jquery-2.1.0.min.js"></script>
<script type="text/javascript" src="/assets/js/before.load.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script type="text/javascript" src="/assets/js/jquery-migrate-1.2.1.min.js"></script>
<script type="text/javascript" src="/assets/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/assets/js/richmarker-compiled.js"></script>
<script type="text/javascript" src="/assets/js/smoothscroll.js"></script>
<script type="text/javascript" src="/assets/js/bootstrap-select.min.js"></script>
<script type="text/javascript" src="/assets/js/jquery.hotkeys.js"></script>
<script type="text/javascript" src="/assets/js/custom.js"></script>
<script type="text/javascript" src="/assets/js/maps.js"></script>
<script type="text/javascript" src="/assets/js/linkify.min.js"></script>

<script>
    var spotJSON = <%-JSON.stringify(data)%>;
    itemDetailMap(spotJSON);

    $(window).load(function(){
        var rtl = false; // Use RTL
        initializeOwl(rtl);
    });

    $('.reviews').linkify({
        tagName: 'a',
        target: '_blank'
    });

    $('#description').linkify({
        tagName: 'a',
        target: '_blank'
    });
</script>
